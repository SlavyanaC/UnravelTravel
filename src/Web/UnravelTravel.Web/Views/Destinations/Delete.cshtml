@model UnravelTravel.Services.Data.Models.Destinations.DestinationEditViewModel
@{
    this.ViewData["Title"] = "Delete Destination";
    var countries = this.ViewData["countries"] as IEnumerable<SelectListItem>;
}
<div class="row justify-content-center">
    <form asp-controller="Destinations" asp-action="Delete" method="post" class="text-center col-md-6">
        <h4>Delete destination</h4>
        <hr />
        <fieldset disabled="">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control col-md-12" value="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryId"></label>
                <select asp-for="CountryId" asp-items="countries" class="form-control col-md-12">
                    <option selected="">@Model.Country</option>
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control col-md-12" value="@Model.ImageUrl" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Information"></label>
                <textarea class="form-control col-md-12" rows="7" asp-for="Information" value="@Model.Information"></textarea>
                <span asp-validation-for="Information" class="text-danger"></span>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-default">Delete destination</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

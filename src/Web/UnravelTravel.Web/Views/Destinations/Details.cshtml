@model UnravelTravel.Services.Data.Models.Destinations.DestinationDetailsViewModel
@{
    this.ViewData["Title"] = "Destination details";
}
<h1 class="text-center">@Model.Name</h1>

<div class="container">
    <p class="text-center  text-info">@Model.Information</p>
    <h4 class="text-center  text-info">Top activities:</h4>
    <div class="jumbotron">
        @await this.Html.PartialAsync("TopActivitiesPartial", @Model.Activities.OrderByDescending(r => r.Tickets.Count()))
    </div>
    <h4 class="text-center text-info">Top Restaurants:</h4>
    <div class="jumbotron">
        @await this.Html.PartialAsync("TopRestaurantsPartial", @Model.Restaurants.OrderByDescending(r => r.Reservations.Count()))
    </div>
        <iframe class="w-100"
                height="450"
                src="https://maps.google.com/maps?q=@Model.Name&t=&z=13&ie=UTF8&iwloc=&output=embed"
                style="border: 0"
                allowfullscreen></iframe>
</div>

@using UnravelTravel.Data.Models

@inject SignInManager<UnravelTravelUser> SignInManager
@inject UserManager<UnravelTravelUser> UserManager

@if (this.SignInManager.IsSignedIn(this.User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="far fa-user"></i>&nbsp;Hello @this.UserManager.GetUserName(this.User)!</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn nav-link">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="col-md-6"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li class="col-md-6"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}


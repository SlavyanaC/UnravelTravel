@model UnravelTravel.Models.InputModels.Reviews.ActivityReviewInputModel
@{
    this.ViewData["Title"] = "Review activity";
}

<div class="row justify-content-center">
    <form method="post" asp-area="" asp-controller="Activities" asp-action="Review" class="text-center col-md-6">
        <h3 class="text-dark">Review your experience at</h3>
        <h4>
            <a asp-area="" asp-controller="Activities" asp-action="Details" asp-route-id="@Model.Id">@Model.Name</a>
        </h4>
        <h6>You visited on @Model.DateAsString</h6>
        <hr />
        <label asp-for="Rating"></label>
        <div class="form-group">
            <input type="radio" asp-for="Rating" value="1" class=" col-md-2" style="margin-right: -30px" />1
            <input type="radio" asp-for="Rating" value="2" class=" col-md-2" style="margin-right: -30px" />2
            <input type="radio" asp-for="Rating" value="3" class=" col-md-2" style="margin-right: -30px" />3
            <input type="radio" asp-for="Rating" value="4" class=" col-md-2" style="margin-right: -30px" />4
            <input type="radio" asp-for="Rating" value="5" class=" col-md-2" style="margin-right: -30px" checked="checked"/>5
        </div>
        <div class="form-group">
            <label asp-for="Content"></label>
            <textarea rows="5" cold="50" asp-for="Content" class="form-control col-md-12"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-primary">Add review</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
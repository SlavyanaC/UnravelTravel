@using UnravelTravel.Data.Models.Enums
@model UnravelTravel.Web.InputModels.Activities.ActivityCreateInputModel
@{
    this.ViewData["Title"] = "Create Activity";
}

<div class="row justify-content-center">
    <form asp-controller="Activities" asp-action="Create" method="post" class="text-center col-md-6">
        <h4>Create new activity</h4>
        <hr />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control col-md-12" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control col-md-12" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Location"></label>
            <input asp-for="Location" class="form-control col-md-12" />
            <span asp-validation-for="Location" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type"></label>
            <select class="form-control col-md-12" asp-for="Type"
                    asp-items="@(Html.GetEnumSelectList<ActivityType>())">
                <option selected="" disabled="">--Select activity type--</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-default">Create activity</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

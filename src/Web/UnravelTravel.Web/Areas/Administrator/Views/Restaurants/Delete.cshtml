@model UnravelTravel.Models.ViewModels.Restaurants.RestaurantDeleteViewModel
@{
    this.ViewData["Title"] = "Delete Restaurant";
}
<div class="row justify-content-center">
    <form asp-area="Administrator" asp-controller="Restaurants" asp-action="Delete" method="post" class="text-center col-md-6">
        <fieldset disabled="">
            <h4>Delete restaurant</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control col-md-12" placeholder="@Model.Name" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationName"></label>
                <input asp-for="DestinationName" class="form-control col-md-12" placeholder="@Model.DestinationName" />
                <span asp-validation-for="DestinationName" class="text-danger"></span>
            </div>
            <div form-group>
                <label asp-for="@Model.ImageUrl"></label>
                <img style="height: 200px; width: 100%;" class="card-img-top" src="@Model.ImageUrl" alt="Destination image" />
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control col-md-12" placeholder="@Model.Address" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seats"></label>
                <input asp-for="Seats" class="form-control col-md-12" placeholder="@Model.Seats" />
                <span asp-validation-for="Seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type"></label>
                <input asp-for="Type" class="form-control col-md-12" placeholder="@Model.Type">
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-outline-warning">Delete Restaurant</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

@model UnravelTravel.Services.Data.Models.Activities.ActivityToEditViewModel
@{
    this.ViewData["Title"] = "Edit Activity";
    var locations = this.ViewData["Locations"] as IEnumerable<SelectListItem>;
}

<div class="row justify-content-center">
    <form enctype="multipart/form-data" asp-area="Administrator" asp-controller="Activities" asp-action="Edit" method="post" class="text-center col-md-6">
        <h4>Edit activity</h4>
        <hr />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control col-md-12" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div form-group>
            <label asp-for="@Model.ImageUrl"></label>
            <img style="height: 200px; width: 100%;" class="card-img-top" src="@Model.ImageUrl" alt="Destination image" />
        </div>
        <div class="form-group">
            <p>New image</p>
            <input type="file" asp-for="NewImage" name="NewImage" />
            <span asp-validation-for="NewImage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control col-md-12" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LocationId"></label>
            <select asp-for="LocationId" asp-items="locations" class="form-control col-md-12">
                <option selected="">@Model.LocationName</option>
            </select>
            <span asp-validation-for="LocationName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type"></label>
            <select class="form-control col-md-12" asp-for="Type"
                    asp-items="@(Html.GetEnumSelectList<ActivityType>())">
                <option selected="" disabled="">--Current: @Model.Type--</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-primary">Edit activity</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
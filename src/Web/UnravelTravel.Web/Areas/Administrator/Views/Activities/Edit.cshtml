@using UnravelTravel.Data.Models.Enums
@model UnravelTravel.Services.Data.Models.Activities.ActivityToEditViewModel
@{
    this.ViewData["Title"] = "Edit Activity";
    var locations = this.ViewData["Locations"] as IEnumerable<SelectListItem>;
}

<div class="row justify-content-center">
    <form asp-area="Administrator" asp-controller="Activities" asp-action="Edit" method="post" class="text-center col-md-6">
        <h4>Edit activity</h4>
        <hr />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control col-md-12" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Date"></label>
            <input asp-for="Date" class="form-control col-md-12" />
            <span asp-validation-for="Date" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LocationId"></label>
            <select asp-for="LocationId" asp-items="locations" class="form-control col-md-12">
                <option selected="">@Model.LocationName</option>
            </select>
            <span asp-validation-for="LocationName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Type"></label>
            <select class="form-control col-md-12" asp-for="Type"
                    asp-items="@(Html.GetEnumSelectList<ActivityType>())">
                <option selected="">@Model.Type</option>
            </select>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-default">Edit activity</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
@model UnravelTravel.Models.ViewModels.Destinations.DestinationEditViewModel
@{
    this.ViewData["Title"] = "Edit Destination";
    var countries = this.ViewData["countries"] as IEnumerable<SelectListItem>;
}

<div class="row justify-content-center">
    <form enctype="multipart/form-data" asp-area="Administrator" asp-controller="Destinations" asp-action="Edit" method="post" class="text-center col-md-6">
        <h4>Edit destination</h4>
        <hr />
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control col-md-12" value="@Model.Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="CountryId"></label>
            <select asp-for="CountryId" asp-items="countries" class="form-control col-md-12">
            </select>
            <span asp-validation-for="CountryId" class="text-danger"></span>
        </div>
        <div form-group>
            <label asp-for="@Model.ImageUrl"></label>
            <img style="height: 200px; width: 100%;" class="card-img-top" src="@Model.ImageUrl" alt="Destination image"/>
        </div>
        <div class="form-group">
            <p>New image</p>
            <input type="file" asp-for="NewImage" name="NewImage" />
            <span asp-validation-for="NewImage" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Information"></label>
            <textarea class="form-control col-md-12" rows="7" asp-for="Information" value="@Model.Information"></textarea>
            <span asp-validation-for="Information" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-primary">Edit destination</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
